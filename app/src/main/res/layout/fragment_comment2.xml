<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/txt_comment2"
        android:layout_width="319dp"
        android:layout_height="165dp"
        android:textColor="@color/colorDarkBlue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.028"
        android:background="@drawable/rounded_corner"
        />

    <TextView

        android:id="@+id/txt_prg_comment2"
        android:layout_width="361dp"
        android:layout_height="234dp"
        android:background="@color/colorDarkBlue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.394" />

    <TextView
        android:id="@+id/txt_prg_comment2_1"
        android:layout_width="135dp"
        android:layout_height="80dp"

        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="@+id/txt_prg_comment2"
        app:layout_constraintEnd_toEndOf="@+id/txt_prg_comment2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txt_prg_comment2"
        app:layout_constraintTop_toTopOf="@+id/txt_prg_comment2"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txt_prg_comment2_2"
        android:layout_width="124dp"
        android:layout_height="55dp"

        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="@+id/txt_prg_comment2"
        app:layout_constraintEnd_toEndOf="@+id/txt_prg_comment2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txt_prg_comment2"
        app:layout_constraintTop_toTopOf="@+id/txt_prg_comment2"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/editText_comment2"
        android:layout_width="332dp"
        android:layout_height="89dp"
        android:background="@color/colorDarkLightBlue"
        android:inputType="textMultiLine"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="@+id/txt_prg_comment2"
        app:layout_constraintEnd_toEndOf="@+id/txt_prg_comment2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txt_prg_comment2"
        app:layout_constraintTop_toTopOf="@+id/txt_prg_comment2"
        app:layout_constraintVertical_bias="0.62" />

    <Button
        android:id="@+id/btn_comment2"
        android:layout_width="237dp"
        android:layout_height="70dp"
        android:background="@drawable/rounded_corner"
        android:text="Проверить"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.704" />

</androidx.constraintlayout.widget.ConstraintLayout>